{
    "compilerOptions": {
      "target": "ESNext", 
      "module": "commonjs" ,
      "lib": ["ESNext", "DOM"] ,
      "jsx": "preserve" ,
      "declaration": true,
      "outDir": "dist",
      "importHelpers": true,
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src"]
  }